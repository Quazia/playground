  "integrations": [
    {
      "name": "erc20_transfers",
      "enabled": true,
      "sources": [
        {
          "name": "mainnet"
        }
      ],
      "table": {
        "name": "erc20_transfers",
        "columns": [
          {
            "name": "chain_id",
            "type": "numeric"
          },
          {
            "name": "block_num",
            "type": "numeric"
          },
          {
            "name": "block_hash",
            "type": "text"
          },
          {
            "name": "block_time",
            "type": "numeric"
          },
          {
            "name": "tx_hash",
            "type": "text"
          },
          {
            "name": "tx_idx",
            "type": "numeric"
          },
          {
            "name": "log_idx",
            "type": "numeric"
          },
          {
            "name": "contract_address",
            "type": "text"
          },
          {
            "name": "from_address",
            "type": "text"
          },
          {
            "name": "to_address",
            "type": "text"
          },
          {
            "name": "value",
            "type": "numeric"
          },
          {
            "name": "indexed_at",
            "type": "timestamp",
            "default": "now()"
          }
        ]
      },
      "block": [
        {
          "name": "chain_id",
          "column": "chain_id"
        },
        {
          "name": "block_num",
          "column": "block_num"
        },
        {
          "name": "block_hash",
          "column": "block_hash"
        },
        {
          "name": "block_time",
          "column": "block_time"
        }
      ],
      "transaction": [
        {
          "name": "tx_hash",
          "column": "tx_hash"
        },
        {
          "name": "tx_idx",
          "column": "tx_idx"
        }
      ],
      "log": [
        {
          "name": "log_addr",
          "column": "contract_address"
        },
        {
          "name": "log_idx",
          "column": "log_idx"
        }
      ],
      "event": {
        "name": "Transfer",
        "type": "event",
        "anonymous": false,
        "inputs": [
          {
            "indexed": true,
            "name": "from",
            "type": "address",
            "column": "from_address"
          },
          {
            "indexed": true,
            "name": "to", 
            "type": "address",
            "column": "to_address"
          },
          {
            "indexed": false,
            "name": "value",
            "type": "uint256",
            "column": "value"
          }
        ]
      }
    }
  ]
